<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bartoszujazdowski.astroweather.activities.AstroTablet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragment3"
                android:name="com.bartoszujazdowski.astroweather.fagments.InfoFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/fragment"
                android:name="com.bartoszujazdowski.astroweather.fagments.SunFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/fragment2"
                android:name="com.bartoszujazdowski.astroweather.fagments.MoonFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/fragment10"
                android:name="com.bartoszujazdowski.astroweather.fagments.WeatherFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/fragment11"
                android:name="com.bartoszujazdowski.astroweather.fagments.MoreInfoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <fragment
                android:id="@+id/fragment12"
                android:name="com.bartoszujazdowski.astroweather.fagments.WeatherForecastFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>